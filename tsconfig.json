{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@modules/*": ["modules/*"],
      "@errors/*": ["errors/*"],
      "@config/*": ["config/*"],
      "@container/*": ["container/*"],
      "@utils/*": ["utils/*"],
      "@repositories/*": ["repositories/*"],
      "@entities/*": ["entities/*"]
    },
    
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}